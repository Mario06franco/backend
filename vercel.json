{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "leclat-app/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
      },
      {
        "src": "/(.*)",
        "dest": "leclat-app/dist/$1"
      }
    ],
    "env": {
      "MONGODB_URI": "@leclat_mongodb_uri",
      "JWT_SECRET": "@leclat_jwt_secret"
    }
  }